{
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Nest Framework",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
              "run",
              "start:debug",
              "--",
              "--inspect-brk"
            ],
            "cwd": "${workspaceFolder}/backend/",
            "autoAttachChildProcesses": true,
            "restart": true,
            "sourceMaps": true,
            "stopOnEntry": false,
            "console": "integratedTerminal",
          }
    ]
}